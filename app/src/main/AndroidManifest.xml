            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName="com.liteart.apps.lordiyapan.NewsListActivity"/>
        <activity android:name="com.liteart.apps.lordiyapan.NewsListActivity"
            />
    </application>

</manifest>