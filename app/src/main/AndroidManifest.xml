        <activity
            android:name="com.liteart.apps.lordiyapan.TabViewMainActivity"
            android:label="@string/videos"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.liteart.apps.lordiyapan.TabViewStoriesEssays"
            android:label="@string/stories"
            android:launchMode="singleTask"
